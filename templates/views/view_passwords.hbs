<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<title>Keysue</title>
	</head>
	<body>
		<p>{{username}}</p>
		<a href="/logout">Logout</a>
		{{#if is_admin}}
		<a href="/passwords/add">Add Password</a>
		<a href="/permissions">View Permissions</a>
		{{/if}}
		{{#each password}}
		<div>
			<a target="_blank" href="{{{this.link}}}">{{this.title}}</a>
			<p>Login ID: {{this.username}}</p>
			<p>Password: {{this.password}}</p>
		</div>
		{{/each}}
	</body>
</html>
